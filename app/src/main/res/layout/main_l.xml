<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <FrameLayout
        android:id="@+id/main_frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.94" >
    </FrameLayout>
    
      <LinearLayout
        android:id="@+id/global_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" >

        <ImageView
            android:id="@+id/global_imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/global_imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"/>
        <ImageView
            android:id="@+id/global_imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/global_imageView_calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/global_imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"
            android:visibility="gone"/>        
        <ImageView
            android:id="@+id/global_imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"
            android:visibility="gone"/>        
        <ImageView
            android:id="@+id/global_imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" 
            android:clickable="true"
            android:visibility="gone"/>        
        <!-- <ImageView
            android:id="@+id/global_imageView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/message1" 
            android:clickable="true"
            android:visibility="gone"/> -->    
        <Button
            android:id="@+id/global_buttonIM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher"
            android:textSize="@dimen/text_lmlarge"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:visibility="gone" />                
        <ProgressBar
            android:id="@+id/global_progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="left"
            android:visibility="gone" 
            android:max="100"/>
        
        <TextView
            android:id="@+id/global_textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/salmon"
            android:text="company"
            android:textSize="@dimen/text_default"
            android:textStyle="bold"
            android:layout_weight="5" />

    </LinearLayout>
    
     
         <TextView
        android:id="@+id/global_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" 
        android:gravity="center"
        android:layout_weight="0.03" 
        android:textColor="@color/red"
        android:visibility="gone" 
        />

</LinearLayout>
