<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

     <RelativeLayout
        android:id="@+id/pp_ls_i_back"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/pp_ls_i_iv_search"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/search_p" />

        <ImageView
            android:id="@+id/pp_ls_i_iv_picturt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pp_ls_i_iv_search"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/pp_ls_i_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/pp_ls_i_iv_search"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/pp_ls_i_iv_res"
            android:gravity="center|start"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/pp_ls_i_iv_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/pp_ls_i_iv_picturt"
            android:src="@drawable/res_p" />

    </RelativeLayout>
    

</LinearLayout>
