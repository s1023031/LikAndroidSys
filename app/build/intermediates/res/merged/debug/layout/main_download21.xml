<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andyshiu.app.uitest.Page14" >

    <RelativeLayout
        android:id="@+id/page14_up_ly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#3F4957" >

        <TextView
            android:id="@+id/page14_li_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="下載"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/page13_down_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

          <RelativeLayout
            android:id="@+id/main_download21_relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >
  
  <TextView
      android:id="@+id/downloadMessage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:text=""
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="@color/red" />

        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/main_download21_relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <RadioGroup
                android:id="@+id/main_download21_radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/main_download21_radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:text="上一日" />

                <RadioButton
                    android:id="@+id/main_download21_radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="當日" />

                <RadioButton
                    android:id="@+id/main_download21_radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="下一日" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"  >

                <LinearLayout
        android:id="@+id/main_download21_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical" 
        android:baselineAligned="false"
        android:gravity="center">

	    <TextView
	        android:id="@+id/main_download21_textView2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/text_large"
	        android:textStyle="bold" 
	        android:gravity="center" 
	        android:visibility="invisible"/>
            
        <ProgressBar
            android:id="@+id/main_download21_progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:visibility="invisible" 
            android:paddingLeft="@dimen/progressbar_left_padding"
            android:paddingRight="@dimen/progressbar_right_padding"/>
        
    </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/main_download21_button1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="#3F4957"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/mc_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Button1"
                    android:textColor="#FFFFFF" />
  

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_download21_button2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="#3F4957"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/mc_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Button3"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/main_download21_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/page13_down_ly"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/page14_up_ly"
        android:choiceMode="multipleChoice" >

    </ListView>
    


</RelativeLayout>
