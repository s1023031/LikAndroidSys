<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="andyshiu.app.uitest.Page1" >

    <LinearLayout
        android:id="@+id/mmiv_down_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#85000000"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/page1_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="註冊頁面"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/page1_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/TextView6" />

            <EditText
                android:id="@+id/uir002_editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="5"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/page1_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/TextView4" />

            <EditText
                android:id="@+id/uir002_editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="5"
                android:inputType="textPersonName" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF" >

            <RelativeLayout
                android:id="@+id/uir002_button1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:background="#34CF95"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/page1_textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Button1"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/uir002_button2"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/uir002_button1"
                android:layout_alignBottom="@+id/uir002_button1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:background="#EF5F45"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/page1_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Button3"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.30"
            android:background="#FFFFFF" >

            <RelativeLayout
                android:id="@+id/ChangeUser"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#EF5F45"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="變更人員"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/uir002_textView11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:layout_weight="0.6"
        android:gravity="top|center"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>